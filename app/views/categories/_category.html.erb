<div id="<%= dom_id category %>" class="bg-secondary bg-hover-pink me-4 px-4 py-2">
  <span class='fw-bold text-white fs-5 cursor-pointer'>
    <%= link_to category.name, root_path(category_id: category.id), class: 'text-white text-decoration-none'%>
  </span>
  <% if current_user.present? %>
    <div>
      <%= link_to "Edit this category", edit_category_path(category), class: 'text-white' %>
      <%= button_to "Destroy this category", category, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: 'mt-2' %>
    </div>
  <% end %>
</div>
