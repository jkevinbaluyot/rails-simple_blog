<% content_for :title, "Articles" %>

<main class="container flex-grow-1">
  <h1>Articles</h1>

  <div id="articles">
    <% @articles.each do |article| %>
      <%= article.title %>
      <p>
        <%= link_to "Show this article", article %>
      </p>
    <% end %>
  </div>

  <% if current_user.present? %>
    <%= link_to "New article", new_article_path %>
  <% end %>
</main>
