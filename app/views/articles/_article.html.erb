
<% content_for(:head) do %>
  <meta name="description" content="<%= strip_tags(article.meta_description).squish %>">
  <meta name="keywords" content="<%= strip_tags(article.meta_keywords).squish %>">
<% end %>

<% content_for(:meta_title) do %>
  <%= article.meta_title%>
<% end %>

<div id="<%= dom_id article %>">
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Content html:</strong>
    <%== marksmithed article.content_html %>
  </p>

  <p>
    <strong>Slug:</strong>
    <%= article.slug %>
  </p>

  <p>
    <strong>Tags:</strong>
    <%= article.tags.map(&:name).join(", ") %>
  </p>

  <p>
    <strong>Meta title:</strong>
    <%= article.meta_title %>
  </p>

  <p>
    <strong>Meta description:</strong>
    <%= article.meta_description %>
  </p>

  <p>
    <strong>Meta keywords:</strong>
    <%= article.meta_keywords %>
  </p>

  <p>
    <strong>Published at:</strong>
    <%= article.published_at %>
  </p>

</div>
