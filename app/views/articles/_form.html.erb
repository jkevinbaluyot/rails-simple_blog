<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content_html, style: "display: block" %>
    <%= form.marksmith :content_html %>
  </div>

  <div>
    <%= form.label :published_at, style: "display: block" %>
    <%= form.datetime_field :published_at %>
  </div>

  <div>
    <%= form.label :article_tag_id, "Tag", style: "display: block" %>
    <%= form.collection_select :article_tag_id, ArticleTag.all, :id, :name, include_blank: true %>

  <h3>Meta</h3>

  <div>
    <%= form.label :meta_title, style: "display: block" %>
    <%= form.text_field :meta_title %>
  </div>

  <div>
    <%= form.label :meta_description, style: "display: block" %>
    <%= form.text_area :meta_description %>
  </div>

  <div>
    <%= form.label :meta_keywords, style: "display: block" %>
    <%= form.text_field :meta_keywords %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
