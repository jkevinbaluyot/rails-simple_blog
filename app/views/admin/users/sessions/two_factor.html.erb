
<div class="max-w-md mx-auto mt-8 p-6">
  <h2 class="text-2xl font-bold mb-6">Enter Verification Code</h2>

  <%= form_with url: admin_two_factor_verify_path, method: :post do |f| %>
    <div class="mb-4">
      <%= f.label :otp_attempt, "Code from authenticator app:" %>
      <%= f.text_field :otp_attempt, required: true, class: "border p-2 w-full" %>
    </div>
    
    <%= f.submit "Verify", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
  <% end %>
</div>