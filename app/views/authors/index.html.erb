<main class="container flex-grow-1">
  <% content_for :title, "Authors" %>

  <h1>Authors</h1>

  <div id="authors" class="mb-4">
    <% @authors.each do |author| %>
      <%= render author %>
      <% if current_user.present? %>
        <div class="d-flex align-items-center gap-2">
        <%= link_to "Edit this author", edit_author_path(author) %> |
        <%= button_to "Destroy this author", author, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: 'btn btn-danger'  %>
        </div>
      <% end %>
    <% end %>
  </div>


  <%= link_to "New author", new_author_path %>
</main>
